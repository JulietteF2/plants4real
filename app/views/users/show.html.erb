<div class="row mt-4 mb-4">
  <div class="col-12">
    <p>Hello! ðŸ‘‹</p>
    <h1><%= @user.first_name %></h1>
  </div>
</div>

<!-- user details tabbed dashboard -->
<div class="row">
  <div class="col-md-3">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">My Plants</a>
      <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">My Bookings</a>
      <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">My Profile</a>
    </div>
  </div>

  <div class="col-md-9">
    <div class="tab-content" id="v-pills-tabContent">
      <!-- Plant details -->
      <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
        <h3>I have <%= @plants.count %> Plant(s)</h3>
        <hr>
        <% @plants.each do |plant| %>
          <div class="card mb-3 border-0">
            <div class="row no-gutters">
              <!-- Plant thumbnail -->
              <div class="col-md-2">
                <%= render partial: 'shared/plants/plant_image', collection: [plant], as: :plant %>
              </div>
              <!-- Plant Information -->
              <div class="col-md-10">
                <div class="card-body pl-4">
                  <h5 class="card-title"><%= link_to plant.name, plant_path(plant) %></h5>
                  <p class="card-title"><i class="fas fa-map-marker-alt"></i>&nbsp;<%= plant.location %> | $<%= plant.price %>0</p>
                  <p class="card-text"><%= plant.description %></p>
                  <p class="card-text"><small class="text-muted">Uploaded <%=  plant.created_at.to_formatted_s(:long_ordinal) %></small></p>
                  <p><%= link_to "Edit Plant", edit_plant_path(plant) %> | <%= link_to "Delete Plant", plant_path(plant), method: :delete, class: "delete" %></p>
                </div>
                <div class="card pl-4 border-0">
                  <h5 class="card-title">Plant Bookings:</h5>
                </div>
                <!-- Plant's Bookings -->
                <%= render partial: 'shared/users/plant_booking_card', collection: [plant], as: :plant%>
              </div>
            </div>
          </div>
          <hr>
        <%end %>
      </div>
      <!-- My booking details -->
      <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
        <div class="row">
         <div class="col-12">
           <h3>I have <%= @bookings.count %> Booking(s)</h3>
           <hr>
         </div>
         <div class="col-12 mt-4">
           <ul class="list-group list-group-flush">
             <% @bookings.each do |booking| %>
               <li class="list-group-item align-items-center d-flex justify-content-end mt-4">
                 <div class="col-6 text-left">
                   <%= link_to "#{booking.plant.name}", booking_path(booking) %>
                 </div>
                  <div class="col-6 text-right">
                     <% if booking.review %>
                       <p class="btn btn-primary ml-3"><%= link_to "Edit review", edit_booking_review_path(booking), class: "text-white" %> </p>
                       <p class="btn btn-danger ml-3"><%= link_to 'Delete review', review_path(booking.review), method: :delete, class: "text-white delete" %> </p>
                     <% else %>
                       <p class="btn btn-warning ml-3"><%= link_to "Add review", new_booking_review_path(booking), class: "text-white" %></p>
                   </div>
                 <% end %>
               </li>
             <%end %>
           </ul>
         </div>
       </div>
      </div>
      <!-- User Details -->
      <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
          <h3>Details about me</h3>
            <hr>
         <div class="row d-flex align-items-center">
          <div class="col-md-3 d-flex justify-content-center text-right">
            <% if @user.photo.attached? %>
              <%= cl_image_tag @user.photo.key, height: 100, class: "avatar-128 rounded-circle" %>
            <% end %>
          </div>
          <div class="col-md-9">
            <ul class="list-group">
              <li class="list-group-item">Name: <%= "#{@user.first_name} #{@user.last_name}" %></li>
              <li class="list-group-item">Bio: <%= @user.details %> </li>
              <li class="list-group-item">Email: <%= @user.email %> </li>
            </ul>
          </div>

      </div>
      <div class="row">
            <div class="col-md-12">
              <div class="text-right mt-4">
                <p class="btn btn-primary"><%= link_to "Edit Profile", edit_user_registration_path(@user), class: "text-white" %></p>
              </div>
            </div>
          </div>
         </div>
    </div>
  </div>
</div>



