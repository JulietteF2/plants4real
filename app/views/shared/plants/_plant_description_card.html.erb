<div class="card mt-4 mb-4 border-0">
  <div class="card-body">
    <p class="card-title">$<%= sprintf("%.2f", @plant.price) %> per day</p>
    <p class="card-title"><i class="fas fa-map-marker-alt"></i>&nbsp;<%= @plant.location %></p>
    <p class="card-text">Description: <%= @plant.description %></p>
    <h5 class="badge badge-secondary"><%= @plant.category %></h5>
    <div>
      <hr>
      <% if @plant.user.photo.attached? %>
        <%= cl_image_tag @plant.user.photo.key, class: "avatar rounded-circle avatar-32 float-left img-fluid" %>
      <% else %>
        <%= image_tag asset_path("place-holder-plant.jpg"), class: " avatar rounded-circle float-left img-fluid" %>
      <% end %>
      <% if policy(@plant).edit? %>
        <p>&nbsp; &nbsp;This is my plant ðŸ˜Š</p>
      <% else %>
        <p class="card-text">&nbsp; &nbsp;Owner <%= link_to "#{@plant.user.first_name} #{@plant.user.last_name}", user_path(@plant.user) %></p>
      <% end %>
    </div>
  </div>
</div>
